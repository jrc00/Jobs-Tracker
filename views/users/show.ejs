<!doctype html>
<html lang='en'>
<head>
  <% include ../partials/head %>
</head>

<body>
  <header>
    <% include ../partials/header %>
  </header>

  <main>
  <a href="/jobs" class="btn btn-primary">back</a>
  <a href="/users/<%=user._id%>/edit" class="btn btn-danger">edit</a>
    <div>
      <h2><b>Jobs Applied For:</b></h2>

      <% user.jobs.forEach(function(job) { %>
      <div class="well">
      <h4><b><%= job.title %></b></h4>
      <p><b>Company: </b><%= job.company %></p>
      <p><b>City: </b><%= job.city %></p>
      <p><b>State: </b><%= job.state %></p>
      <p><b>Country: </b><%= job.country %></p>
      <p><b>Post Date: </b><%= job.postDate %></p>
      <p><b>Description: </b><%= job.description %></p>
      <p><a class="btn btn-success" href="<%=job.applyUrl%>">Apply</a></p>
      </div>
      <% }) %>
    </div>
  </main>

<footer>
  <% include ../partials/footer %>
</footer>
</body>
</html>
