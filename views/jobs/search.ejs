<!doctype html>
<html lang='en'>
<head>
  <% include ../partials/head %>
</head>
<body>

  <main>
    <div>
      <h3>Jobs Found:</h3>
      <h4>
      <% jobs.forEach(function(job) { %>
        <form method="post" action="/jobs/add">
          <div class="form-group">
            <!-- <select name="add">
              <% jobs.forEach(function(job) { %>
                <option value="<%=job.jobkey%>"><%=job.jobtitle%></option>
              <% }) %>
            </select> -->
          <div>
            <h1><%= job.title %></h1>
            <p><b>Company: </b><%= job.company %></p>
            <p><b>City: </b><%= job.city %></p>
            <p><b>State: </b><%= job.state %></p>
            <p><b>Country: </b><%= job.country %></p>
            <p><b>Post Date: </b><%= job.date %></p>
            <p><b>Description: </b><%= job.snippet %></p>
            <p><b>Apply Url: </b><a href="<%=job.url%>"><%= job.url %></a></p>
          </div>
            <button name="add" type="submit" class="btn btn-default" value="<%=job.jobkey%>">Add</button>
          </div>
        </form>
        <% }) %>
      </h4>
    </div>
  </div>
  </main>
</body>
</html>
