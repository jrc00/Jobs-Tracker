<!doctype html>
<html lang='en'>
<head>
  <% include ../partials/head %>
</head>
<body>
  <header>
    <% include ../partials/header %>
  </header>
  <main>
    <div>
      <h3>Jobs Found:</h3>
      <h4>
      <% jobs.forEach(function(job) { %>
        <form method="post" action="/jobs/add">
          <div class="form-group">
            <!-- <select name="add">
              <% jobs.forEach(function(job) { %>
                <option value="<%=job.jobkey%>"><%=job.jobtitle%></option>
              <% }) %>
            </select> -->
            <div class="well">
              <h1><%= job.title %></h1>
              <p><b>Company: </b><%= job.company %></p>
              <p><b>City: </b><%= job.city %>, <%= job.state %></p>
              <p><b>Country: </b><%= job.country %></p>
              <p><b>Post Date: </b><%= job.date %></p>
              <p><b>Description: </b><%= job.snippet %></p>
              <p><a class="btn btn-success" href="<%=job.url%>">Apply</a>
              <button name="add" type="submit" class="btn btn-default" value="<%=job.jobkey%>">Add</button></p>
            </div>

          </div>
        </form>
        <% }) %>
      </h4>
    </div>
  </div>
  </main>
  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>
