<!doctype html>
<html lang='en'>
<head>
  <% include ../partials/head %>
</head>

<body>
  <header>
    <% include ../partials/header %>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.js"></script>
  </header>

  <main>
  <form method="post" action="/jobs/search">
  <div class="form-group">
  <input type="text"
         class="form-control"
         name="search"
         required>
  <button type="submit" class="btn btn-default">Search</button>
  </div>
  </form>
    <div>
      <h1>JOBS:</h1>
      <% jobs.forEach(function(job) { %>
      <div>
          <form method="POST" action="/jobs/<%= job._id %>?_method=DELETE">
            <a href="/jobs/<%= job._id %>">
              <%= job.title + ' - ' + job.company %>
            </a><br>
            <button type="submit" class="btn btn-info" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
          </form>
      </div>
      <% }) %>
    </div>

    <div id="tweet-container">
      <script type="text/javascript">
        var socket = io();

          socket.on('connect', function() {
            console.log('Connected!');
          });

          socket.on('tweets', function(tweet) {
            var html = '<div class="row"><div class="col-md-6 col-md-offset-3 tweet"><img src="' + tweet.user_profile_image + '" class="avatar pull-left"/><div class="names"><span class="full-name">' + tweet.name + ' </span><span class="username">@' +tweet.screen_name + '</span></div><div class="contents"><span class="text">' + tweet.text + '</span></div></div></div>';
            $('#tweet-container').prepend(html);
          });
      </script>
    </div>

  </main>

  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>
